{
  "handler": "Microsoft.Compute.MultiVm",
  "version": "0.0.1-preview",
  "parameters": {
    "basics": [
      {
        "name": "tshirtSize",
        "type": "Microsoft.Common.DropDown",
        "label": "Topology Size",
        "defaultValue": "Small (A1 + A1)",
        "toolTip": "The size of the virtual machines to use in the cluster.",
        "constraints": {
          "allowedValues": [
            {
              "label": "Small (A1 + A1)",
              "value": "Small"
            },
            {
              "label": "Medium (A2 + D1)",
              "value": "Medium"
            },
            {
              "label": "Large (A3 + D2)",
              "value": "Large"
            }
          ]
        }
      },
      {
        "name": "adminUsername",
        "type": "Microsoft.Compute.UserNameTextBox",
        "label": "VM username",
        "toolTip": "Administrative username for the virtual machines.",
        "osPlatform": "Linux",
        "constraints": {
          "required": true
        }
      },
      {
        "name": "adminCredentials",
        "type": "Microsoft.Compute.CredentialsCombo",
        "label": {
          "authenticationType": "Authentication type",
          "password": "Password",
          "confirmPassword": "Confirm password",
          "sshPublicKey": "SSH public key"
        },
        "constraints": {
          "required": true
        },
        "options": {
          "hideConfirmation": false
        },
        "osPlatform": "Linux"
      },
      {
        "name": "mySQLPassword",
        "type": "Microsoft.Common.PasswordBox",
        "label": {
          "password": "MySQL password",
          "confirmPassword": "Confirm MySQL password"
        },
        "toolTip": "The password for the MySQL administrator account.",
        "constraints": {
          "required": true,
          "regex": "",
          "validationMessage": ""
        },
        "options": {
          "hideConfirmation": false
        }
      },
      {
        "name": "dnsNameForPublicIP",
        "type": "Microsoft.Common.TextBox",
        "label": "DNS prefix",
        "toolTip": "This prefix will determine the public DNS name for the deployment.",
        "constraints": {
          "required": true
        }
      }
    ],
    "steps": [
      {
        "name": "deploymentDetails",
        "label": "Deployment Parameters",
        "subLabel": {
          "preValidation": "Required",
          "postValidation": "Done"
        },
        "bladeTitle": "Deployment Parameters",
        "elements": [
          {
            "name": "virtualNetwork",
            "type": "Microsoft.Network.VirtualNetworkCombo",
            "label": {
              "virtualNetwork": "Virtual network",
              "subnets": "Subnets"
            },
            "defaultValue": {
              "name": "vnet-prestashop",
              "addressPrefixSize": "/16"
            },
            "constraints": {
              "minAddressPrefixSize": "/16"
            },
            "subnets": {
              "subnet1": {
                "label": "Front subnet",
                "defaultValue": {
                  "name": "Subnet-1",
                  "addressPrefixSize": "/24"
                },
                "constraints": {
                  "minAddressPrefixSize": "/24",
                  "minAddressCount": 12,
                  "requireContiguousAddresses": true
                }
              },
              "subnet2": {
                "label": "MySQL subnet",
                "defaultValue": {
                  "name": "Subnet-2",
                  "addressPrefixSize": "/26"
                },
                "constraints": {
                  "minAddressPrefixSize": "/26",
                  "minAddressCount": 8,
                  "requireContiguousAddresses": true
                }
              }
            }
          },
          {
            "name": "newStorageAccountName",
            "type": "Microsoft.Storage.StorageAccountSelector",
            "label": "Storage account",
            "toolTip": "Storage account where the VM disks will be stored.",
            "constraints": {
              "required": true
            }
          }
        ]
      },
      {
        "name": "prestashopInfo",
        "label": "PrestaShop Parameters",
        "subLabel": {
          "preValidation": "Required",
          "postValidation": "Done"
        },
        "bladeTitle": "PrestaShop Parameters",
        "elements": [
          {
            "name": "adminFirstName",
            "type": "Microsoft.Common.TextBox",
            "label": "First name",
            "defaultValue": "",
            "toolTip": "PrestaShop administrator first name.",
            "constraints": {
              "required": true
            }
          },
          {
            "name": "adminLastName",
            "type": "Microsoft.Common.TextBox",
            "label": "Last name",
            "defaultValue": "",
            "toolTip": "PrestaShop administrator last name",
            "constraints": {
              "required": true
            }
          },
          {
            "name": "adminEmail",
            "type": "Microsoft.Common.TextBox",
            "label": "E-mail",
            "defaultValue": "",
            "toolTip": "PrestaShop administrator e-mail",
            "constraints": {
              "required": true,
              "regex": ""
            }
          },
          {
            "name": "adminPSPassword",
            "type": "Microsoft.Common.PasswordBox",
            "label": {
              "password": "Password",
              "confirmPassword": "Confirm password"
            },
            "toolTip": "PrestaShop administrator password",
            "constraints": {
              "required": true,
              "regex": "",
              "validationMessage": ""
            },
            "options": {
              "hideConfirmation": false
            }
          }
        ]
      }
    ],
    "outputs": {
      "tshirtSize": "[basics('tshirtSize')]",
      "dnsNameForPublicIP": "[basics('dnsNameForPublicIP')]",
      "vnetNewOrExisting": "[steps('deploymentDetails').virtualNetwork.newOrExisting]",
      "vnetName": "[steps('deploymentDetails').virtualNetwork.name]",
      "vnetPrefix": "[steps('deploymentDetails').virtualNetwork.addressPrefix]",
      "vnetSubnet1Name": "[steps('deploymentDetails').virtualNetwork.subnets.subnet1.name]",
      "vnetSubnet1Prefix": "[steps('deploymentDetails').virtualNetwork.subnets.subnet1.prefix]",
      "vnetSubnet2Name": "[steps('deploymentDetails').virtualNetwork.subnets.subnet2.name]",
      "vnetSubnet2Prefix": "[steps('deploymentDetails').virtualNetwork.subnets.subnet2.prefix]",
      "adminUsername": "[basics('adminUsername')]",
      "authenticationType": "[basics('adminCredentials').authenticationType]",
      "adminPassword": "[basics('adminCredentials').password]",
      "sshPublicKey": "[basics('adminCredentials').sshPublicKey]",
      "mySQLPassword": "[basics('mySQLPassword')]",
      "newStorageAccountName": "[steps('deploymentDetails').newStorageAccountName.name]",
      "adminFirstName": "[steps('prestashopInfo').adminFirstName]",
      "adminLastName": "[steps('prestashopInfo').adminLastName]",
      "adminEmail": "[steps('prestashopInfo').adminEmail]",
      "adminPSPassword": "[steps('prestashopInfo').adminPSPassword]",
      "region": "[location()]"
    }
  }
}